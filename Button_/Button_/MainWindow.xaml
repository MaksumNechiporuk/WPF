<Window x:Class="Button_.MainWindow"
      x:Name="ImgWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Button_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" SizeChanged="ImgWindow_SizeChanged"  >
    <Canvas>
        <Button x:Name="btnImage" FontWeight="Bold" Height="200" Width="300" Click="BtnImage_Click"  MouseWheel="BtnImage_MouseWheel" MinWidth="100" MinHeight="100">
            <WrapPanel>
                <Image x:Name="img"  
                     />
            </WrapPanel>
        </Button>
    </Canvas>
</Window>
