<Window x:Class="MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="100,13,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Slider x:Name="sldAge" HorizontalAlignment="Left" Margin="100,52,0,0" VerticalAlignment="Top" Width="159" Maximum="100" ValueChanged="SldAge_ValueChanged" SmallChange="{DynamicResource int}" IsSnapToTickEnabled="True"/>
        <Label x:Name="lblAge"  HorizontalAlignment="Left" Margin="264,52,0,0" VerticalAlignment="Top"/>
        <DatePicker HorizontalAlignment="Left" Margin="25,96,0,0" VerticalAlignment="Top"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="25,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Age" HorizontalAlignment="Left" Margin="25,52,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnAddImg" Content="Add img" HorizontalAlignment="Left" Margin="25,140,0,0" VerticalAlignment="Top" Width="75" Click="BtnAddImg_Click"/>
        <Image x:Name="img" HorizontalAlignment="Left" Height="110" Margin="319,10,0,0" VerticalAlignment="Top" Width="131"/>


    </Grid>
</Window>
