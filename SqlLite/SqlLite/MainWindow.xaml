<Window x:Class="SqlLite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SqlLite"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtLogin" HorizontalAlignment="Left" Height="23" Margin="80,35,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="80,70,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label Content="Логін" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="dgViewDB" HorizontalAlignment="Left" Height="279" Margin="33,111,0,0" VerticalAlignment="Top" Width="735"/>
        <Button x:Name="btnAddNew" Content="Add" HorizontalAlignment="Left" Margin="299,35,0,0" VerticalAlignment="Top" Width="75" Click="BtnAddNew_Click"/>
        <Button x:Name="btnSignIn" Content="Sign in" HorizontalAlignment="Left" Margin="299,70,0,0" VerticalAlignment="Top" Width="75"/>


    </Grid>
</Window>
