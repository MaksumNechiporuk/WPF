<Window x:Class="WpfSimple.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSimple"
        mc:Ignorable="d"
        Title="Вхід в систему" Height="302.833" Width="387.11">
    <Canvas>
        <Label Content="Електронна пошта" Canvas.Left="65" Canvas.Top="25"/>
        <TextBox x:Name="txtEmail" Height="23" Canvas.Left="65" TextWrapping="Wrap" Canvas.Top="51" Width="256"/>

        <Label Content="Пароль" Canvas.Left="65" Canvas.Top="80"/>
        <TextBox x:Name="txtPassword" Height="23" Canvas.Left="65" TextWrapping="Wrap" Canvas.Top="105" Width="256"/>

        <Button x:Name="btnLogin" Content="Вхід" Canvas.Left="125" Canvas.Top="152" Width="102" Height="29" Click="BtnLogin_Click"/>

        <Button x:Name="btnRegister" Content="Реєстрація" Canvas.Left="125" Canvas.Top="192" Width="102" Height="29" Click="BtnRegister_Click"/>
    </Canvas>

</Window>
